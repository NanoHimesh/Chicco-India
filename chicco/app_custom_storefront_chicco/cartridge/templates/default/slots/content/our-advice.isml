<isif condition="${slotcontent != null}">
    <h2 class="text-center">${Resource.msg('our.advice.title', 'home', null)}</h2>
    <section class="advice_section">
        <div class="container">
            <div class="row">
                <isloop items="${slotcontent.content}" var="contentAsset">
                    <isprint value="${contentAsset.custom.body}" encoding="off" />
                </isloop>
            </div>
        </div>
    </section>
</isif>